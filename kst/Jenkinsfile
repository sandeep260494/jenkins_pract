pipeline{
    agent {
        label 'KST-AGENT'
    }
    environment {
        APP_VERSION = ''
        REGION =  'us-east-1'
        AC_ID = '291293118913'
        PROJECT = 'KST'
        COMPONENT = 'dev'
    } 
    options{
        timeout(time: 30, unit: 'MINUTES')
        disableConcurrentBuilds()
    }  
    stages {

        stage('Read package.json') {
            steps {
                // dir('kst') {   // ðŸ‘ˆ IMPORTANT
                    script {
                        def packageJson = readJSON file: 'package.json'
                        env.APP_VERSION = packageJson.version
                        echo "Package version: ${env.APP_VERSION}"
                    }
                }
            }
        }
    }
    post {
        always {
            echo "Job Executed"
        }
        failure {
            echo "Failed"
        }
        success {
            echo 'Job Success'
        }
    }

}