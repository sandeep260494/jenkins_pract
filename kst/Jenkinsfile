pipeline{
    agent {
        label 'KST-AGENT'
    }
    environment {
        APP_VERSION = ''
        REGION =  'us-east-1'
        AC_ID = '291293118913'
        PROJECT = 'KST'
        COMPONENT = 'dev'
    } 
    options{
        timeout(time: 30, unit: 'MINUTES')
        disableConcurrentBuilds()
    }  
    stages {
        stage('Read package.json'){
            steps{
                script{
                     def pkg = readJSON file: 'package.json'
                     env.APP_VERSION = pkg.version
                     echo "Application version: ${env.APP_VERSION}"
                }
            }
        }
        stage('install dependencies'){
            steps{
                script{
                    sh """
                        npm install
                    """
                }
            }
        }
        stage('unit testing'){
            steps{
                script{
                    echo 'UNIT TESTING'
                }
            }
        }
    } 
    post {
        always {
            echo "Job Executed"
        }
        failure {
            echo "Failed"
        }
        success {
            echo 'Job Success '
        }
    }
}
